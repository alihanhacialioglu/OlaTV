@using EntityLayer.Concrete
@model TextSize
@{
	ViewData["Title"] = "TextSize_Update";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("TextSize_Update", "TextSize", FormMethod.Post, new { @class = "form-group" }))
{
	@Html.Label("Text Size ID")
	<input class="form-control" type="text" value="@Model.TextSizeId" disabled />
	@Html.TextBoxFor(m=>m.TextSizeId,new { @class = "form-control", @type = "hidden"})
	<br />

	@Html.Label("Text Size Name")
	@Html.TextBoxFor(m=>m.TextSizeName,new { @class = "form-control"})
	<br />

	@Html.Label("Status")
	@Html.DropDownList("IsDelete",
	new SelectListItem[] {
		new SelectListItem() { Text = "True", Value = "true", Selected = Model.IsDelete },
		new SelectListItem() { Text = "False", Value = "false", Selected = !Model.IsDelete }},
	new { @class = "form-select"})
	<br />
	<input class="form-control btn btn-primary" type="submit" value="Text Size Update" />
}

