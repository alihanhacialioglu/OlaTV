@using EntityLayer.Concrete
@using OlaTvUI.PagedList
@model List<Cast>

@{
    ViewData["Title"] = "Cast_Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var pager = (Pager)ViewBag.pager;
    var i = 1;
}

@section searchbar{
    <form class="d-none d-sm-inline-block form-inline mr-auto md-3 my-md-0 mw-100 navbar-search">
        <div class="input-group ms-3">
            <input type="text" class="form-control border-0 small" placeholder="Search for..."
               aria-label="Search" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-light" type="button">
                    <i class="fas fa-search fa-sm"></i>
                </button>
            </div>
        </div>
    </form>
}

<h2>Cast Page</h2>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Name Surname</th>
            <th>Status</th>
            <th>Status Change Buttons</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@i</th>
                <td>@item.CastNameSurname</td>
                <td>@item.IsDelete</td>
                <td>
                    <a href="/Cast/Cast_Activate/@item.CastId" class="btn btn-outline-success text-center">Activate <i class="fa fa-check"></i></a>
                    <a href="/Cast/Cast_Deactivate/@item.CastId" class="btn btn-outline-dark text-center">Deactivate <i class="fa fa-times" aria-hidden="true"></i></a>

                </td>
                <td>
                    <a href="/Cast/Cast_Update/@item.CastId" type="button" class="btn btn-outline-primary">Update</a>              
                    <button type="button" class="btn btn-outline-danger text-center" data-bs-whatever="@item.CastId" data-bs-toggle="modal" data-bs-target="#decisionPopup">Delete</button>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

<div class="text-center d-flex justify-content-start p-2">
    <a href="/Cast/Cast_Add" class="btn btn-success d-flex justify-content-center">Add<ion-icon name="add" style="font-size:25px; margin-left:10px;"></ion-icon></a>
</div>

<div id="ListContainer" style="color:white;display:inline-block;position:relative;top:50%;left:50%;transform:translate(-50%,-50%);">
    <partial name="PartialCustomPager" model="@pager" />
</div>

<!-- Modal -->
@*#decisionPopup Model*@

<div class="modal fade" id="decisionPopup" tabindex="=-1" aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="deleteLabel">Warning</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <a id="delete-btn" href="" class="btn btn-success">Yes</a>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#decisionPopup').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var CastId = button.attr('data-bs-whatever');
            var a = document.querySelector("#delete-btn");
            a.href = "/Cast/Cast_Delete/" + CastId;
        });
    });
</script>