@using EntityLayer.Concrete
@model List<Background>

@{
	ViewData["Title"] = "Background_Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-borderless">
	<thead>
		<tr>
			<th>Background Id</th>
			<th>Color Id</th>
			<th>Color Name</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var bg in Model)
		{
			<tr>
				<td>@bg.BackgroundId</td>
				<td>@bg.ColorId</td>
				<td>@bg.Color.ColorName</td>
				<td>
					<button type="button" class="btn btn-outline-danger text-center" data-bs-whatever="@bg.BackgroundId" data-bs-toggle="modal" data-bs-target="#decisionPopup">Delete</button>
				</td>
				<td><a href="/Background/Background_Update/@bg.BackgroundId" type="button" class="btn btn-outline-primary p-2 ">Update</a></td>
			</tr>
		}

	</tbody>
</table>
<div class="text-center d-flex justify-content-start p-2">
	<a href="/Background/Background_Add" class="btn btn-success">Add New Background </a>
</div>


<!-- Modal -->
@*#decisionPopup Model*@
<div class="modal fade" id="decisionPopup" tabindex="=-1" aria-labelledby="silLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title" id="silLabel">Uyarı</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				Silmek istediğinizden emin misiniz?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>
				<a id="delete-btn" href="" class="btn btn-success">Evet</a>
			</div>
		</div>
	</div>
</div>


<script>
	$(document).ready(function () {
		$('#decisionPopup').on('show.bs.modal', function (event) {
			var button = $(event.relatedTarget);
			var BackgroundId = button.attr('data-bs-whatever');
			var a = document.querySelector("#delete-btn");
			a.href = "/Background/Background_Delete/" + BackgroundId;
		});
	});
</script>