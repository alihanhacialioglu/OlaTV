@using EntityLayer.Concrete
@model ProfileVideoWatchingModel

@{
	ViewData["Title"] = "ProfileVideoWatching_Add";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ProfileVideoWatching Adding Page</h2>
<br />

@using (Html.BeginForm("ProfileVideoWatching_Add", "ProfileVideoWatching", FormMethod.Post, new { @class = "form-group" }))
{
	@Html.Label("Date Of Watched")
	@Html.TextBoxFor(m=>m.ProfileVideoWatching.ProfileVideoDateOfWached,DateTime.Now.ToString("yyyy-MM-dd"), new { @class = "form-control", @style = "height:40px;width:170px;", @type = "date" })
	<br />

	@Html.Label("Profile")
	@Html.DropDownListFor(m => m.ProfileVideoWatching.ProfileId,
		new SelectList(Model.Profiles, "ProfileId", "ProfileName"), "Select Profile",
		new { @class = "form-select" })
	@Html.ValidationMessage("ProfileId",new { @class ="text-danger" })
	<br />

	@Html.Label("Video")
	@Html.DropDownListFor(m => m.ProfileVideoWatching.VideoId,
	new SelectList(Model.Videos, "VideoId", "VideoUrl"), "Select Video",
		new { @class = "form-select" })
	@Html.ValidationMessage("VideoId",new { @class ="text-danger" })
	<br />
	
	<input class=" btn btn-primary" type="submit" value="Add" />
}

