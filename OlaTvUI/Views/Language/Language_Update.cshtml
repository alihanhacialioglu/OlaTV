@using EntityLayer.Concrete
@model Language
@{
    ViewData["Title"] = "Language_Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Language Update Page</h2>
<br />
@using (Html.BeginForm("Language_Update", "Language", FormMethod.Post, new { @class = "form-group" }))
{

    @Html.Label("ID")
    @Html.HiddenFor(m => m.LanguageId)
    @Html.TextBoxFor(m=>m.LanguageId,new { @class = "form-control", @disabled = "disabled"})
    <br />
    @Html.Label("Language Name")
    @Html.TextBoxFor(m=>m.LanguageName,new { @class = "form-control"})
    @Html.ValidationMessage("LanguageName",new { @class ="text-danger" })


    <br />
   
    <input class=" btn btn-primary" type="submit" value=" Update" />
}

