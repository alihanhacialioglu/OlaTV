@using EntityLayer.Concrete
@model Genre
@{
	ViewData["Title"] = "Genre_Update";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Genre Update Page</h2>
<br />
@using (Html.BeginForm("Genre_Update", "Genre", FormMethod.Post, new { @class = "form-group" }))
{
	@Html.Label("ID")
	<input class="form-control" type="text" value="@Model.GenreId" disabled />
	@Html.TextBoxFor(m=>m.GenreId,new { @class = "form-control", @type = "hidden"})
	<br />

	@Html.Label("Genre Name")
	@Html.TextBoxFor(m=>m.GenreName,new { @class = "form-control"})
	<br />

	
	<input class=" btn btn-primary" type="submit" value=" Update" />
}

