@using EntityLayer.Concrete
@model Category

@{
    ViewData["Title"] = "Category_Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Category Update Page</h2>
<br />

@using (Html.BeginForm("Category_Update", "Category", FormMethod.Post, new { @class = "form-group" }))
{
    @Html.Label("Category Id")
    @Html.HiddenFor(m => m.CategoryId)
    @Html.TextBoxFor(m=>m.CategoryId,new { @class = "form-control", @disabled = "disabled"})
    <br />

    @Html.Label("Category Name")
    @Html.TextBoxFor(m=>m.CategoryName,new { @class = "form-control" })
    @Html.ValidationMessageFor(m=>m.CategoryName,"",new { @class ="text-danger" })
    <br />

    <input class=" btn btn-primary" type="submit" value=" Update" />
}
