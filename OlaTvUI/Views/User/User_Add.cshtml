@using EntityLayer.Concrete
@model UserModel

@{
    ViewData["Title"] = "User_Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>User Adding Page</h2>
<br />

@using (Html.BeginForm("User_Add", "User", FormMethod.Post, new { @class = "form-group" }))
{
    @Html.Label("User Name")
    @Html.TextBoxFor(m=>m.User.UserName,"",new { @class = "form-control"} )
    @Html.ValidationMessageFor(m=>m.User.UserName,"",new { @class ="text-danger" })
    <br />

    @Html.Label("Password")
    @Html.TextBoxFor(m=>m.User.Password,"",new { @class = "form-control"} )
    @Html.ValidationMessageFor(m=>m.User.Password,"",new { @class ="text-danger" })
    <br />

    @Html.Label("Email")
    @Html.TextBoxFor(m=>m.User.EmailAddress,"",new { @class = "form-control"} )
    @Html.ValidationMessageFor(m=>m.User.EmailAddress,"",new { @class ="text-danger" })
    <br />

    @Html.Label("Phone Number")
    @Html.TextBoxFor(m=>m.User.PhoneNumber,"",new { @class = "form-control"} )
    @Html.ValidationMessageFor(m=>m.User.PhoneNumber,"",new { @class ="text-danger" })
    <br />

    @Html.Label("Date Of Registration")
    @Html.TextBoxFor(m=>m.User.DateOfRegistration,"",new { @class = "form-control"} )
    @Html.ValidationMessageFor(m=>m.User.DateOfRegistration,"",new { @class ="text-danger" })
    <br />

    @Html.Label("Access Pin")
    @Html.TextBoxFor(m=>m.User.AccessPin,"",new { @class = "form-control"} )
    @Html.ValidationMessageFor(m=>m.User.AccessPin,"",new { @class ="text-danger" })
    <br />

    @Html.Label("Packet Name")
    @Html.DropDownListFor(m => m.User.PacketId, 
        new SelectList(Model.Packets, "PacketId", "PacketName"), "Select Packet", 
        new { @class = "form-control" })
    @Html.ValidationMessageFor(m=>m.Packets.FirstOrDefault().PacketId,"",new { @class ="text-danger" })
    <br />

    @Html.Label("Status")
    <select class="form-control" name="IsDelete">
        <option selected>False</option>
        <option>True</option>
    </select>
    <br />

    <input class=" btn btn-primary" type="submit" value="Add" />
}