@using EntityLayer.Concrete
@model Style
@{
	ViewData["Title"] = "Style_Update";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Style_Update", "Style", FormMethod.Post, new { @class = "form-group" }))
{
	@Html.Label("Style ID")
	<input class="form-control" type="text" value="@Model.StyleId" disabled />
	@Html.TextBoxFor(m=>m.StyleId,new { @class = "form-control", @type = "hidden"})
	<br />

	@Html.Label("Style Name")
	@Html.TextBoxFor(m=>m.StyleName,new { @class = "form-control"})
	<br />

	@Html.Label("Status")
	@Html.DropDownList("IsDelete",
	new SelectListItem[] {
		new SelectListItem() { Text = "True", Value = "true", Selected = Model.IsDelete },
		new SelectListItem() { Text = "False", Value = "false", Selected = !Model.IsDelete }},
	new { @class = "form-select"})
	<br />
	<input class="form-control btn btn-primary" type="submit" value="Style Update" />
}

