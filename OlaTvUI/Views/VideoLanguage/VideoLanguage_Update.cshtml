@using EntityLayer.Concrete
@model VideoLanguageModel
@{
    ViewData["Title"] = "VideoLanguage_Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>VideoLanguage Update Page</h2>
<br />

@using (Html.BeginForm("VideoLanguage_Update", "VideoLanguage", FormMethod.Post, new { @class = "form-group" }))
{
    @Html.Label("VideoLanguage ID")
    <input class="form-control" type="text" name="VideoId" value="@Model.VideoLanguage.VideoLanguageId" disabled />
    @Html.TextBoxFor(m=>m.VideoLanguage.VideoLanguageId,new { @class = "form-control", @type = "hidden"} )
    <br />


	@Html.Label("Video Url")
	@Html.DropDownListFor(m => m.VideoLanguage.VideoId,
		new SelectList(Model.Videos, "VideoId", "VideoUrl"), "Select Video Url",
		new { @class = "form-select" })
	@Html.ValidationMessage("VideoId", new { @class ="text-danger" })
	<br />

	@Html.Label("Subtitle Language")
	@Html.DropDownListFor(m => m.VideoLanguage.LanguageId,
		new SelectList(Model.Languages, "LanguageId", "LanguageName"), "Select Subtitle Language",
		new { @class = "form-select" })
	@Html.ValidationMessage("LanguageId",new { @class ="text-danger" })
	<br />

    <input class=" btn btn-primary" type="submit" value="Update" />
}

