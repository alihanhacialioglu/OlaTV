@using EntityLayer.Concrete
@model ContentModel

@{
	ViewData["Title"] = "Content_Add";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Content Adding Page</h2>
<br />

@using (Html.BeginForm("Content_Add", "Content", FormMethod.Post, new { @class = "form-group" }))
{
	@Html.Label("Content Name")
	@Html.TextBoxFor(m=>m.Content.ContentName,"",new { @class = "form-control", @placeholder="Content Name" })
	@Html.ValidationMessage("ContentName",new { @class ="text-danger" })

	<br />

	@Html.Label("Maturity Rating")
	@Html.DropDownListFor(m => m.Content.MaturityRatingId, 
		new SelectList(Model.MaturityRatings, "MaturityRatingId", "StatusName"), "Select Maturity Rating", 
		new { @class = "form-select" })
	@Html.ValidationMessage("MaturityRatingId",new { @class ="text-danger" })

	<br />

	<input class=" btn btn-primary" type="submit" value="Add" />
}
