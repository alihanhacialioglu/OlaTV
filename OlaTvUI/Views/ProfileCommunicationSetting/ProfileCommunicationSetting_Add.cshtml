@using EntityLayer.Concrete
@model ProfileCommunicationSettingModel
@{
    ViewData["Title"] = "ProfileCommunicationSetting_Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ProfileCommunicationSetting Adding Page</h2>
<br />
@using (Html.BeginForm("ProfileCommunicationSetting_Add", "ProfileCommunicationSetting", FormMethod.Post, new { @class = "form-group" }))
{

    @Html.Label("Selection")
    @Html.TextBoxFor(m=>m.ProfileCommunicationSetting.ProfileCommunicationSettingSelection,"",new { @class = "form-control" })
    @Html.ValidationMessage("ProfileCommunicationSettingSelection",new { @class ="text-danger" })
    <br />

    @Html.Label("Profile Name")
    @Html.DropDownListFor(m => m.ProfileCommunicationSetting.ProfileId,
		new SelectList(Model.Profiles, "ProfileId", "ProfileName"),
		new { @class = "form-select" })
    @Html.ValidationMessage("ProfileId",new { @class ="text-danger" })
    <br />

    @Html.Label("CommunicationSetting Name")
    @Html.DropDownListFor(m => m.ProfileCommunicationSetting.CommunicationSettingId,
		new SelectList(Model.CommunicationSettings, "CommunicationSettingId", "CommunicationSettingName"),
		new { @class = "form-select" })
    @Html.ValidationMessage("CommunicationSettingId",new { @class ="text-danger" })
    <br />

    <input class=" btn btn-primary" type="submit" value="Add" />
}



