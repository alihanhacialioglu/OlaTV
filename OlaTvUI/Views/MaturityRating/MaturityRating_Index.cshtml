@using EntityLayer.Concrete
@model List<MaturityRating>
@{
    ViewData["Title"] = "MaturityRating_Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var i = 1;
    var id = 1;
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>ID</th>
            <th>Status Name</th>
            <th>Maturity Explanation</th>
            <th>Status</th>
            <th>Change Status</th>
            <th>CRUD Operations</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@i</th>
                <td>@item.MaturityRatingId</td>
                <td>@item.StatusName</td>
                <td>@item.MaturityExplanation</td>
                <td>@item.IsDelete</td>
                <td>
                    <a href="/MaturityRating/MaturityRating_Activate/@item.MaturityRatingId" class="btn btn-outline-success text-center" style="margin-right:10px;">Activate <i class="fa fa-check"></i></a>
                    <a href="/MaturityRating/MaturityRating_Deactivate/@item.MaturityRatingId" class="btn btn-outline-secondary text-center" style="margin-right:10px;">Deactivate <i class="fa fa-times" aria-hidden="true"></i></a>
                </td>
                <td>
                    <a href="/MaturityRating/MaturityRating_Update/@item.MaturityRatingId" type="button" class="btn btn-outline-primary" style="margin-right:10px;">Update</a>
                    <button type="button" class="btn btn-outline-danger text-center" data-bs-whatever="@item.MaturityRatingId" data-bs-toggle="modal" data-bs-target="#decisionPopup">Delete</button>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

<div class="text-center d-flex justify-content-start p-2">
    <a href="/MaturityRating/MaturityRating_Add" class="btn btn-success d-flex justify-content-center">Add Maturity Rating<ion-icon name="add" style="font-size:25px; color:white; margin-left:10px;"></ion-icon></a>
</div>

<!-- Modal -->
@*#decisionPopup Model*@

<div class="modal fade" id="decisionPopup" tabindex="=-1" aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="deleteLabel">Warning</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @*@Model.Where(m=>m.MaturityRatingId==1).Select(p=>p.StatusName).FirstOrDefault() *@
                Are you sure you want to delete?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <a id="delete-btn" href="" class="btn btn-success">Yes</a>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#decisionPopup').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var MaturityRatingId = button.attr('data-bs-whatever');
            var a = document.querySelector("#delete-btn");
            a.href = "/MaturityRating/MaturityRating_Delete/" + MaturityRatingId;
            //$(".modal-body").append(MaturityRatingId);
        });
    });
</script>


